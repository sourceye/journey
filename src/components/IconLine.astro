---
export interface Props {
    line: string;
    icon?: string;
}
import { Icon } from "astro-iconify";
const { line, icon = "iconoir:file-not-found" } = Astro.props;
---

<div class="flex justify-center align-middle items-center">
    <div class="w-16 h-16"><Icon name={icon} /></div>
    <span class="ml-10 text-3xl font-bold text-white block">{line}</span>
</div>
